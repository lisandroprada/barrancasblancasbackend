# .env.template - Environment Variables for Loteo Backend
# Copy this file to .env and fill in your actual values.

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/loteo_db

# JWT Authentication Secret
JWT_SECRET=your_super_secret_jwt_key_here_please_change_this

# Email Sending Configuration (Nodemailer)
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=your_email@example.com
MAIL_PASS=your_email_password
MAIL_FROM=no-reply@example.com

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8080,https://barrancas.ipropietas.com.ar
